CROSS_COMPILE :=
GCC := $(CROSS_COMPILE)gcc
LD := $(CROSS_COMPILE)ld
RM := rm

TARGET := demo

MFILE_PATH :=  	./debug		\
				./mlqueue   \
				./mlist     \
				./mmodule   \
				./mvideo    \
				./msdl	    \
				.			

MINCLUDE_PATH := $(MFILE_PATH) \
				./libsdl/include \
				./libffmpeg/include \
				./include

MCDEFINE := 
MCDEFINE += -DPRINT_LEVEL=DEBUG -g3 -gdwarf-2
MINCLUDE := $(patsubst %, -I%, $(MINCLUDE_PATH))
MCFLAGS := -c $(MINCLUDE) $(MCDEFINE)

MLD_LIB := pthread	\
		   avformat	\
		   avcodec 	\
		   avutil 	\
		   swscale 	\
		   SDL2
MLD_FLAGS := $(patsubst %, -l%, $(MLD_LIB))

SRCS := $(wildcard $(addsuffix /*.c, $(MFILE_PATH)))
OBJS := $(patsubst %.c, %.o, $(SRCS))

all:$(TARGET)
	
$(TARGET):$(OBJS)
	$(GCC) $(MLD_FLAGS) -o $@ $^

%.o:%.c
	$(GCC) $(MCFLAGS) -o $@ $^

.PHONY:clean
e:
	$(GCC) -E $(MINCLUDE) $(SRCS) > eee
clean:
	@$(RM) $(TARGET) $(OBJS) eee -rvf



